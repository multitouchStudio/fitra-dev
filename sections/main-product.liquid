            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text Color",
                "default": "#000"
            }
        ],
        "presets": [
            {
                "name": "Main Product",
                "category": "Product"
            }
        ]
    }
    {% endschema %}
    
    